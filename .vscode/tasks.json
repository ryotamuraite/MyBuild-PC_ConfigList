{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "ESLint: 全ファイルチェック",
      "type": "shell",
      "command": "npm",
      "args": ["run", "lint"],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": ["$eslint-stylish"],
      "runOptions": {
        "runOn": "default"
      }
    },
    {
      "label": "ESLint: 全ファイル修正",
      "type": "shell",
      "command": "npm",
      "args": ["run", "lint:fix"],
      "group": {
        "kind": "build", 
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": ["$eslint-stylish"]
    },
    {
      "label": "TypeScript: 型チェック",
      "type": "shell",
      "command": "npm",
      "args": ["run", "type-check"],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "全チェック実行",
      "type": "shell",
      "command": "npm",
      "args": ["run", "check-all"],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": ["$eslint-stylish", "$tsc"]
    }
  ]
}
